config BR2_PACKAGE_KMOD
	bool "kmod"
	depends on !BR2_STATIC_LIBS
	help
	  handle kernel modules

	  http://git.kernel.org/?p=utils/kernel/kmod/kmod.git

if BR2_PACKAGE_KMOD

config BR2_PACKAGE_KMOD_TOOLS
	bool "kmod utilities"
	depends on BR2_PACKAGE_BUSYBOX_SHOW_OTHERS
	help
	  Install kmod module utilities (depmod, insmod, lsmod,
	  modinfo, modprobe, rmmod).

config BR2_PACKAGE_KMOD_PYTHON
	bool "Python bindings for kmod"
	depends on !BR2_PACKAGE_BLUEZ5_UTILS
	help
	  Build Python bindings for kmod

comment "kmod Python bindings conflict with bluez5_utils because of a circular dependency"
    depends on BR2_PACKAGE_BLUEZ5_UTILS

endif

comment "kmod needs a toolchain w/ dynamic library"
	depends on BR2_STATIC_LIBS
